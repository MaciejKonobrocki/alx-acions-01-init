pipeline {
    agent any

    environment {
        PYTHON = 'python3'
        VENV_DIR = '.venv'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup Python env') {
            steps {
                sh """
                # Tworzymy wirtualne ≈õrodowisko
                ${PYTHON} -m venv ${VENV_DIR}
                . ${VENV_DIR}/bin/activate

                # Aktualizacja pip i instalacja zale≈ºno≈õci
                pip install --upgrade pip
                pip install -r requirements.txt

                # Tworzymy folder na raporty test√≥w
                mkdir -p reports
                """
            }
        }

        stage('Run pytest') {
            steps {
                sh """
                . ${VENV_DIR}/bin/activate
                pytest -v --junitxml=reports/junit-report.xml
                """
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
            junit 'reports/junit-report.xml'
        }
        success {
            echo 'Tests passed üéâ'
        }
        failure {
            echo 'Tests failed ‚ùå'
        }
    }
}